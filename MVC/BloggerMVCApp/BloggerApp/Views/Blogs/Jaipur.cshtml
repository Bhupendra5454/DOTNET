@{
}

@{
    ViewBag.Title = "Jaipur - The Pink City";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            text-align: center;
        }

        p {
            line-height: 1.6;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewBag.Title</h1>
        <p>Welcome to Jaipur, the capital city of Rajasthan, known for its majestic forts, vibrant culture, and enchanting palaces.</p>
        <p> <a href="/Posts/Jaipur">Click here for full post</a>.</p>

    </div>

</body>
</html>
