@model StateManagementApp.Models.University
<h1>Register University</h1>
<hr />
<div class="row">
    <div class="col-me-4">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="control-control"></input>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="control-control"></input>
            </div>

            <div class="form-group">
                <table>
                    @{
                        List<SelectListItem> colleges = Model.EnggColgList;
                        foreach (var colg in colleges)
                        {
                            <td>
                                <input type="checkbox" id="@colg.Value" value="@colg.Value" name="colleges" checked="@colg.Selected" />
                            </td>
                            <td>
                                <label for="@colg.Value" class="control-label">@colg.Value</label>
                            </td>
                        }
                    }
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>